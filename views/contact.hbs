<h1 class="text-center">Contact Us</h1>

<form class="col-md-6 col-md-offset-3" method="POST">
  {{#each errorMessage}}
  <div class="alert alert-danger">
    {{this.msg}}

  </div>
  {{/each}}
  <div class="form-group">
    <label>Name</label>
    <input type="text" name="name"value="{{name}}" class="form-control" id="exampleInputEmail1" placeholder="Your name">
  </div>
  <div class="form-group">
    <label>Email</label>
    <input type="email" name="email" class="form-control" value="{{email}}" id="exampleInputEmail1" placeholder="Your email">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Message</label>
    <textarea name="message" id="" cols="30" rows="3" class="form-control" >{{message}}</textarea>
    {{!-- <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
  --}}
  </div>
  
  
  <button type="submit" class="btn btn-primary">Submit</button>
</form>